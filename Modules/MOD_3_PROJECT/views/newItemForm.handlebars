<!--Add Item Form-->
<form action="/new-item-form/asile/{{id}}" method="post">
  <!--Input for name-->
  <label for="name">Item Name:</label><br />
  <input type="text" id="name" name="name" required /><br /><br />

  <!--Input for image-->
  <label for="image">Image URL:</label><br />
  <input type="text" id="image" name="image" required /><br /><br />

  <!--Input for description-->
  <label for="description">Description:</label><br>
    <textarea name="description" rows="5" cols="10" id="description" required></textarea><br><br>

  <!--Input for price-->
  <label for="price">Price:</label><br />
  <input type="text" id="price" name="price" required /><br /><br />

  <!--Input for category-->
  <label for="category">Category:</label><br />
  {{!-- <input type="text" id="category" name="category" required /> --}}
  <select class="custom-select" id="category" name="category" required>
    <option selected>Choose...</option>
    {{#each category}}
      <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>
  <br /><br />
  <input type="hidden" id="AisleId" name="AisleId" value={{id}} />

  <p>Aisle: {{id}}</p>
  <!--passing the aisle id -->
  <!--Submit Item button-->
  <button type="submit" class="btn btn-info">Submit a new item!</button>
</form>

<script>
  document.write('<a href="' + document.referrer + '"><button class="btn btn-info btnback">‚ùÆ Back</button></a>');
</script>